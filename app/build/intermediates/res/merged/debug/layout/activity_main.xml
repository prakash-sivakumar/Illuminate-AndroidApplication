<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/main"
    tools:context="com.example.illuminate.MainActivity" >
    <AbsoluteLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/absoluteLayout">


    <Button
        android:id="@+id/btnnext"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="167dp"
        android:layout_height="248dp"


        android:layout_centerHorizontal="true"
        android:layout_x="-10dp"
        android:layout_y="-2dp"
        android:background="@drawable/taketest" />

    <Button
        android:id="@+id/button2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="167dp"
        android:layout_height="248dp"

        android:layout_below="@+id/btnnext"
        android:layout_centerHorizontal="true"
        android:layout_x="-10dp"
        android:layout_y="251dp"
        android:background="@drawable/disclaimer" />

        <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="175dp"
        android:layout_height="248dp"

        android:id="@+id/button"


        android:layout_below="@+id/button3"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2"
        android:layout_x="164dp"
        android:layout_y="-2dp"
        android:background="@drawable/reference" />

        <Button
            android:id="@+id/button3"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="175dp"
            android:layout_height="248dp"

            android:layout_x="164dp"
            android:layout_y="251dp"
            android:background="@drawable/about"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="139dp"
            android:layout_marginStart="139dp" />
    </AbsoluteLayout>

</RelativeLayout>
